@model CASecurity.Web.Models.AppModel

<!--App Modal -->
<div>
    @{
        Html.EnableClientValidation();
    }
    <!--Modal content -->
    @using (Html.BeginForm("CreateApp", "Admin", FormMethod.Post))
    {
        @Html.ValidationSummary(true)
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Application</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    @Html.HiddenFor(x => x.BankId)
                    @Html.HiddenFor(x => x.MerchantId)

                    <div class="form-group">
                        <div class="col-lg-12">
                            <label for="Name">App Name</label>
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "app name", @maxlength = "60" })
                            @*<input type="text" class="form-control" name="AppName" placeholder="app name" required maxlength="60">*@
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                            <label for="Package">App Package</label>
                            @Html.TextBoxFor(x => x.Package, new { @class = "form-control", @placeholder = "package", @maxlength = "50" })
                            @*<input type="text" class="form-control" name="AppPackage" placeholder="package" required maxlength="50">*@
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                            <label>App Code</label>
                            @Html.TextBoxFor(x => x.Code, new { @class = "form-control", @placeholder = "code", @maxlength = "4" })
                            @*<input type="text" class="form-control" name="AppCode" placeholder="code" required maxlength="4">*@
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                            <label>App PlatForm</label>
                            @Html.TextBoxFor(x => x.PlatForm, new { @class = "form-control", @placeholder = "platForm", @maxlength = "60" })
                            @*<input type="text" class="form-control" name="AppPlatForm" placeholder="platForm" required maxlength="60">*@
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button id="btnAppSave" type="submit" class="btn  btn-success">Save</button>
            </div>
        </div>
    }
</div>
