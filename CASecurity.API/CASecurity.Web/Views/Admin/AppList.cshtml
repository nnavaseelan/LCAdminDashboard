@model CASecurity.Web.Models.ApplistModel

@{
    Layout = null;
}

<div class="col-lg-12">
    <div class="row">
        <table class="table table-responsive table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Code</th>
                    @*<th>Address </th>*@
                    <th>PlatForm</th>
                    <th>Package</th>
                    <th>Production</th>
                    <th>SandBox</th>
                    <th>JustPayCode</th>
                    <th>SDK Issued Date</th>
                    <th>CSR</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Apps)
                {
                    <tr>
                        @*<td>
                                @item.Id
                            </td>*@
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.Code
                        </td>
                        @*<td>
                                @item.Address

                            </td>*@
                        <td>
                            @item.PlatForm

                        </td>
                        <td>
                            @item.Package
                        </td>
                        <td>
                            @item.Production
                        </td>
                        <td>
                            @item.SandBox
                        </td>
                        <td>
                            @item.JustPayCode
                        </td>
                        <td>
                            @item.SDKIssuedDateTime
                        </td>
                        <td>
                            @using (Html.BeginForm("UploadCSR", "Admin", new { id = item.Id }, FormMethod.Post, new { @id = "uploadCsrFile", enctype = "multipart/form-data" }))
                            {
                                <input type="file" name="file" id="csrfile" />
                                <input type="submit" value="Upload" />
                                @ViewBag.Message
                            }
                        </td>
                        <td>
                            <button class="btn btnEdit btn-success" data-id="@item.Id">Modify</button>
                            @*@Html.ActionLink("Remove", "DeleteBank", "Admin", new { id = item.Id }, new { @class="btn btnRemove btn-danger", @onclick = "return ConfirmDialog('Are you sure you wish to delete?');" })*@
                            <button class="btn btnRemove btn-danger" data-url="@Url.Action("DeleteApp", "Admin", new { id = item.Id })" onclick="ConfirmDialog(this, 'Are you sure you wish to delete?');">Remove</button>
                        </td>
                    </tr>
                }

            </tbody>
        </table>

    </div>
</div>











